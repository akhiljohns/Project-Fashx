  <title>User Profile</title>
  <style>
    /* Styles for the profile page */
    body {
      font-family: Arial, sans-serif;
      background-color: #f1f1f1;
      margin: 0;
      padding: 0;
    }

    .profile-section {
      padding: 30px;
    }

    .profile-card {
      border-radius: 10px;
      background-color: #ffffff;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    .profile-name {
      margin-top: 20px;
    }

    .nav-tabs {
      margin-top: 30px;
      border-bottom: none;
    }

    .nav-link {
      border: none;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
    }

    .nav-link.active {
      background-color: #f1f1f1;
    }

    .tab-content {
      margin-top: 30px;
    }

    .profile-info {
      padding: 20px;
      background-color: #f1f1f1;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .info-row {
      display: flex;
      margin-bottom: 10px;
    }

    .info-label {
      flex: 0 0 30%;
      font-weight: bold;
    }

    .info-value {
      flex: 0 0 70%;
    }

    .profile-image {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
    }

    .profile-image-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    .profile-image-actions {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }

    .profile-image-actions input[type="file"] {
      display: none;
    }

    .add-address-a {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .address-card {
      margin-bottom: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      padding: 10px;
    }

    .address-card .card-body {
      padding: 0;
    }

    .address-card .card-body h5 {
      margin-bottom: 5px;
    }

    .address-card .card-body .card-subtitle {
      font-size: 14px;
      margin-bottom: 10px;
    }

    .address-card .card-body .card-text {
      margin-bottom: 0;
    }

    /* Additional styles for responsiveness */
    @media (max-width: 768px) {
      .col-lg-4,
      .col-lg-8 {
        margin-bottom: 20px;
      }
    }

    @media (max-width: 576px) {
      .profile-card,
      .address-card {
        padding: 15px;
      }

      .profile-info,
      .address-card .card-body {
        padding: 10px;
      }

      .profile-image {
        width: 120px;
        height: 120px;
      }
    }
  </style>
