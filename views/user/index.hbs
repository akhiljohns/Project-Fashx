<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Custom CSS -->
<style>
    /* Add your custom CSS styles here */
    .custom-slider-container {
        width: 100vw;
        right: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .custom-slider {
        display: flex;
        height: 79vh;
        width: 100vw;
        transition: transform 0.5s ease-in-out;
        align-items: center;
        /* Align items vertically in the slider */
    }

    .custom-slider-item {
        
        flex: 0 0 100%;
        padding: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /* Center content vertically */
    }

    .custom-slider-item p,
    .custom-slider-item h3,
    .custom-slider-item h4,
    .custom-slider-item a {
        margin-bottom: 10px;
    }

    .innerBannerDiv img {
        width: 50vw;
        height: 20vhpx;
    }
    .innerimgdiv{
        justify-content: center;
        align-items: center;
       font-size: 2rem;
       font-weight: bolder;
        width: 30vw;
        height: 30vh;
        margin-right: 50px;
    }
</style>

<section class="custom-banner-slider d-flex mb-40">
    <div class="custom-banner-inner d-flex align-items-center">
        <div class="container">
            <div class="custom-banner-content row">
                <div class="col-lg-10">
                    <div class="custom-slider-container">
                        <div class="custom-slider">
                            <!-- Replace this with your loop or static content -->
                            {{#each banner}}
                            <div class="custom-slider-item">
                                <div class="d-flex align-items-center innerBannerDiv">
                                    <div class="details d-flex flex-column innerimgdiv">
                                        
                                        <h1 class="custom-text-uppercase"><br />{{this.title}}</h1>
                                        <h3>{{this.subTitle}}</h3>
                                        <a class="btn btn-outline-success mt-8" style="width: 20%;font-weight:600;" href="{{this.link}}">{{this.button}}</a>
                                    </div>
                                    <img src="/uploads/{{this.images}}" alt="...">
                                </div>
                            </div>
                            {{/each}}

                            <!-- Add more custom-slider-item here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






<!-- Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Custom JavaScript -->
<script>
    // Custom JavaScript for slider functionality
    const slider = document.querySelector('.custom-slider');
    let currentIndex = 0;
    const sliderItems = document.querySelectorAll('.custom-slider-item');

    function showSlide(index) {
        if (index < 0) {
            index = sliderItems.length - 1;
        } else if (index >= sliderItems.length) {
            index = 0;
        }
        slider.style.transform = `translateX(-${index * 100}%)`;
        currentIndex = index;
    }

    setInterval(() => {
        showSlide(currentIndex + 1);
    }, 5000);

    // Optional: Add event listeners for next and previous buttons
    document.querySelector('.custom-prev-btn').addEventListener('click', () => {
        showSlide(currentIndex - 1);
    });

    document.querySelector('.custom-next-btn').addEventListener('click', () => {
        showSlide(currentIndex + 1);
    });
</script>