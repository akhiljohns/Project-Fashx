  .profile-name {
    margin-top: 20px;
  }

  .nav-tabs {
    margin-top: 30px;
    border-bottom: none;
  }

  .nav-link {
    border: none;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  .nav-link.active {
    background-color: #f1f1f1;
  }

  .tab-content {
    margin-top: 30px;
  }

  .profile-info {
    padding: 20px;
    background-color: #f1f1f1;
    border-radius: 10px;
    margin-bottom: 20px;
  }

  .info-row {
    display: flex;
    margin-bottom: 10px;
  }

  .info-label {
    flex: 0 0 30%;
    font-weight: bold;
  }

  .info-value {
    flex: 0 0 70%;
  }

  .profile-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
