    } else {
      $.ajax({
        type: 'POST',
        url: '/check-password',
        data: {
          oldpassword: oldpassword,
          newpassword: newpassword
        },
        success: function (resp) {
          console.log("OLD PASSWORD CHECK", resp.oldPasswordCheck);
