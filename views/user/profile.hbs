  @media (max-width: 768px) {

    .col-lg-4,
    .col-lg-8 {
      margin-bottom: 20px;
    }
  }

  @media (max-width: 576px) {

    .profile-card,
    .address-card {
      padding: 15px;
    }

    .profile-info,
    .address-card .card-body {
      padding: 10px;
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }
  }
</style>

