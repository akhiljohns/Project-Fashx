<main class="main-wrap">

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order List</h2>

            </div>

        </div>
        <div class="card mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>

                                <th scope="col">Date</th>
                                <th scope="col">Order No</th>
                                <th scope="col">Customer</th>
                                <th scope="col">Payment</th>
                                <th scope="col">Status</th>
                                <th scope="col" class="text-end"> Action </th>
                            </tr>
                        </thead>
                        <tbody>{{#each orders}}
                        <tr>
                            <td id="date">{{this.order.date}}</td>
                            <td><a style="color: black;">{{this.order.orderNo}}</a></td>
                            
                        
                            <td><b>{{this.order.address.fname}} {{this.order.address.lname}}</b></td>
                        
                            <td>{{this.order.paymentMethod}}</td>
                         
                            
                           
                            {{#if (eq this.order.status 'Cancelled') }}
                            <td style="color:red">{{order.status}}</td>
                            {{else if (eq this.order.status 'Pending')}}
                            <td style="color:rgb(250, 196, 35)">{{order.status}}</td>
                            {{else if (eq this.order.status 'Returned')}}
                            <td style="color:rgb(0, 98, 255)">{{order.status}}</td>
                              {{else if (eq this.order.status 'Delivered')}}
                                <td style="color:rgb(204, 0, 255)">{{order.status}}</td>
                            {{else}}
                            <td style="color:green">{{this.order.status}}</td>
                            {{/if}}
                 
                        
                        
                            <td class="text-end">
                                <a  onclick="hi('{{this.order._id}}')"
                                    href="/admin/orders/details?orderId={{this.order._id}}&userId={{this.order.user}}" class="btn btn-outline-success">Details</a>
                        
                            </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div> <!-- table-responsive //end -->
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->

    </section> <!-- content-main end// -->

</main>
